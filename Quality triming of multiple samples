 #Define an array of sample names: ACBarrie, Alsen, Baxter, Chara, Drysdale.
(base) teameinstein@hackbio:~/Majoka$ samples=(ACBarrie Alsen Baxter Chara Drysdale)

#check if done
(base) teameinstein@hackbio:~/Majoka$ echo ${samples[@]}
ACBarrie Alsen Baxter Chara Drysdale

 #create new script file
#!/bin/bash
set -euo pipefail

# Define sample names
samples=(ACBarrie Alsen Baxter Chara Drysdale)

# Make sure output directory exists
mkdir -p qc_reads

# Loop through each sample
for SAMPLE in "${samples[@]}"; do
    echo "Processing sample: $SAMPLE"

    # Run fastp on paired-end reads
    fastp \
        -i "${SAMPLE}_R1.fastq.gz" \
        -I "${SAMPLE}_R2.fastq.gz" \
        -o "qc_reads/${SAMPLE}_R1.fastq.gz" \
        -O "qc_reads/${SAMPLE}_R2.fastq.gz" \
        --html "qc_reads/${SAMPLE}_fastp.html" \
        --json "qc_reads/${SAMPLE}_fastp.json" \
        --thread 4

    echo "Done with $SAMPLE"
done

echo "All samples processed!"

(base) teameinstein@hackbio:~/Majoka$ nano run_fastp.sh

#make the script executionable
(base) teameinstein@hackbio:~/Majoka$ chmod +x run_fastp.sh

 #run the script./run_fastp.sh
(base) teameinstein@hackbio:~/Majoka$ ./run_fastp.sh

# check outputs in the qc_reads folder
(base) teameinstein@hackbio:~/Majoka$ ls qc_reads

 #confirming html files
(base) teameinstein@hackbio:~/Majoka$ ls qc_reads/*.html
qc_reads/ACBarrie_fastp.html  qc_reads/Chara_fastp.html
qc_reads/Alsen_fastp.html     qc_reads/Drysdale_fastp.html
qc_reads/Baxter_fastp.html
